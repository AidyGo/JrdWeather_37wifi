<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <!-- PR698811 Neo Skunkworks - Richard He modified - 001 Begin -->

    <LinearLayout
        android:layout_width="120dip"
        android:layout_height="105dip"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/hour_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/hour_time"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="6dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:layout_width="22.5dip"
            android:layout_height="13.5dip"
            android:layout_gravity="center_vertical"
            android:background="@drawable/arrow"
            android:rotation="90" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="104dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/hour_icon"
                android:layout_width="82.5dp"
                android:layout_height="82.5dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="45dp" />

            <TextView
                android:id="@+id/hour_temp"
                android:layout_width="54dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="45dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/hour_text"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="21dip"
                android:fontFamily="sans-serif-light"
                android:gravity="left|center_vertical"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />
        </LinearLayout>
        <!-- PR698811 Neo Skunkworks - Richard He modified - 001 End -->

    </LinearLayout>

</LinearLayout>