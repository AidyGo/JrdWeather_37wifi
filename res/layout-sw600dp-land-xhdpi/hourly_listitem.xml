<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <!-- PR672471 Neo Skunkworks - Richard He modified - 001 Begin -->

    <LinearLayout
        android:layout_width="171dip"
        android:layout_height="90dip"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dip"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/hour_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/hour_time"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="45dp"
                android:gravity="center"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:layout_width="15dip"
            android:layout_height="9dip"
            android:layout_gravity="center_vertical"
            android:background="@drawable/arrow"
            android:rotation="90" />
    </LinearLayout>

    <!--
        <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@drawable/line2" />
    -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="88.5dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/hour_icon"
                android:layout_width="82.5dp"
                android:layout_height="82.5dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="57dp" />

            <TextView
                android:id="@+id/hour_temp"
                android:layout_width="54dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="51dip"
                android:gravity="center_vertical"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/hour_text"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="13.5dip"
                android:gravity="center_vertical"
                android:textSize="18sp" />
        </LinearLayout>

        <!--
        <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@drawable/line1" />
        -->

    </LinearLayout>
    <!-- PR672471 Neo Skunkworks - Richard He modified - 001 End -->

</LinearLayout>