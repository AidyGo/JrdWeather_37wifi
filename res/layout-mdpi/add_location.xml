<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_night"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/locate_layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center_horizontal"
        android:orientation="vertical"
        android:visibility="visible" >

        <Button
            android:id="@+id/locate_bt_auto"
            android:layout_width="wrap_content" 
            android:layout_height="40dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:gravity="center"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="20dp"
            android:text="@string/locate_auto"
            android:textColor="#FFFFFF"
            android:textSize="15sp"/>

        <ListView
            android:id="@+id/search_citylist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/locate_layout_connect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dip"
            android:text="@string/locate_connect_error"
            android:fontFamily="sans-serif"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <Button
            android:id="@+id/locate_connect"
            android:layout_width="wrap_content" 
            android:layout_height="40dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:gravity="center"
            android:fontFamily="sans-serif-light"
            android:text="@string/locate_goto_connect"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>